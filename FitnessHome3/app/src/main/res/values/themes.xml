<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FitnessHome" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/fitnesshome</item>
        <item name="colorPrimaryDark">@color/logokyesil</item>
        <item name="colorAccent">@color/logosari</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FitnessHome.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FitnessHome.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FitnessHome.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextViewBMIStyle" parent="@android:style/TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">@dimen/text_size20</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewBMIDescStyle" parent="@android:style/TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">@dimen/text_size18</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/darksilver</item>
    </style>
</resources>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FitnessHome" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="TextViewBMIStyle" parent="@android:style/TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">@dimen/text_size20</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewBMIDescStyle" parent="@android:style/TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">@dimen/text_size18</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/darksilver</item>
    </style>
</resources>